guard 'coffeescript', :input => 'src', :output => 'public'
guard 'coffeescript', :input => 'spec', :output => 'spec/javascipts'
guard 'sass', :input => 'src', :output => 'public'
guard 'haml', :output => 'public/', :input => 'src' do
  watch %r{^.+(\.haml)(?!(\.swp))}
  #watch %r{^src/haml/.+(\.html\.haml)(?!(\.swp))}
end
